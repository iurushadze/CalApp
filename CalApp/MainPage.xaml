<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalApp.MainPage"
             BackgroundColor="#F9FAFB"
             Title="Calorie Calculator">

    <ScrollView>
        <VerticalStackLayout
            Padding="30"
            Spacing="20"
            VerticalOptions="Center"
            HorizontalOptions="Center">

            <!-- Title -->
            <Label
                Text="Calorie Calculator"
                FontSize="32"
                FontAttributes="Bold"
                FontFamily="RobotoBold"
                TextColor="#1F2937"
                HorizontalOptions="Center" />

            <!-- Main Card -->
            <Frame
                Padding="24"
                BackgroundColor="#FFFFFF"
                HasShadow="True"
                WidthRequest="360"
                BorderColor="#E5E7EB">

                <VerticalStackLayout Spacing="16">

                    <!-- Age -->
                    <Frame Padding="10" BackgroundColor="#F3F4F6" BorderColor="#D1D5DB" HasShadow="False">
                        <Entry x:Name="AgeEntry" Placeholder="Age" Keyboard="Numeric"
                               TextColor="Black" BackgroundColor="Transparent" PlaceholderColor="#6B7280" />
                    </Frame>

                    <!-- Height -->
                    <Frame Padding="10" BackgroundColor="#F3F4F6" BorderColor="#D1D5DB" HasShadow="False">
                        <Entry x:Name="HeightEntry" Placeholder="Height (cm)" Keyboard="Numeric"
                               TextColor="Black" BackgroundColor="Transparent" PlaceholderColor="#6B7280" />
                    </Frame>

                    <!-- Weight -->
                    <Frame Padding="10" BackgroundColor="#F3F4F6" BorderColor="#D1D5DB" HasShadow="False">
                        <Entry x:Name="WeightEntry" Placeholder="Weight (kg)" Keyboard="Numeric"
                               TextColor="Black" BackgroundColor="Transparent" PlaceholderColor="#6B7280" />
                    </Frame>

                    <!-- Gender Picker -->
                    <Frame Padding="0" BackgroundColor="#F3F4F6" BorderColor="#D1D5DB" HasShadow="False">
                        <Picker x:Name="GenderPicker" Title="Select Gender" TextColor="Black" BackgroundColor="#F3F4F6">
                            <Picker.Items>
                                <x:String>Male</x:String>
                                <x:String>Female</x:String>
                            </Picker.Items>
                        </Picker>
                    </Frame>

                    <!-- Activity Picker -->
                    <Frame Padding="0" BackgroundColor="#F3F4F6" BorderColor="#D1D5DB" HasShadow="False">
                        <Picker x:Name="ActivityPicker" Title="Select Activity" TextColor="Black" BackgroundColor="#F3F4F6">
                            <Picker.Items>
                                <x:String>Walking</x:String>
                                <x:String>Running</x:String>
                            </Picker.Items>
                        </Picker>
                    </Frame>

                    <!-- Speed -->
                    <Frame Padding="10" BackgroundColor="#F3F4F6" BorderColor="#D1D5DB" HasShadow="False">
                        <Entry x:Name="SpeedEntry" Placeholder="Speed (km/h)" Keyboard="Numeric"
                               TextColor="Black" BackgroundColor="Transparent" PlaceholderColor="#6B7280" />
                    </Frame>

                    <!-- Measure Type Picker -->
                    <Frame Padding="0" BackgroundColor="#F3F4F6" BorderColor="#D1D5DB" HasShadow="False">
                        <Picker x:Name="MeasurePicker" Title="Measure Type" TextColor="Black" BackgroundColor="#F3F4F6">
                            <Picker.Items>
                                <x:String>Steps</x:String>
                                <x:String>Distance</x:String>
                            </Picker.Items>
                        </Picker>
                    </Frame>

                    <!-- Steps -->
                    <Frame Padding="10" BackgroundColor="#F3F4F6" BorderColor="#D1D5DB" HasShadow="False">
                        <Entry x:Name="StepsEntry" Placeholder="Steps (if applicable)" Keyboard="Numeric"
                               TextColor="Black" BackgroundColor="Transparent" PlaceholderColor="#6B7280" />
                    </Frame>

                    <!-- Distance -->
                    <Frame Padding="10" BackgroundColor="#F3F4F6" BorderColor="#D1D5DB" HasShadow="False">
                        <Entry x:Name="DistanceEntry" Placeholder="Distance (km if applicable)" Keyboard="Numeric"
                               TextColor="Black" BackgroundColor="Transparent" PlaceholderColor="#6B7280" />
                    </Frame>

                    <!-- Calculate Button -->
                    <Button
                        Text="⚡ Calculate"
                        Clicked="OnCalculateClicked"
                        BackgroundColor="#6366F1"
                        TextColor="White"
                        FontAttributes="Bold"
                        FontSize="18"
                        HeightRequest="54" />

                    <!-- Result -->
                    <Label
                        x:Name="ResultLabel"
                        FontSize="20"
                        TextColor="#10B981"
                        FontAttributes="Bold"
                        HorizontalTextAlignment="Center" />

                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
